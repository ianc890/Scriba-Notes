<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/note_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <EditText
        android:id="@+id/note_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_note_title"
        android:text = "@string/title_test"
        android:singleLine="true"
        android:inputType="textNoSuggestions"
        android:maxLength="50" />

    <EditText
        android:id="@+id/note_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:textIsSelectable="true"
        android:inputType="textMultiLine|textNoSuggestions"
        android:text = "@string/content_test"
        android:hint="@string/hint_note_content" />

        <TextView
            android:id="@+id/valTv2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="16dp"
            android:text="Val:"
            android:visibility="invisible"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>


    <com.shamanland.fab.FloatingActionButton
        android:id="@+id/keyboard_hide_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_keyboard_hide_white_24dp" />

    <com.shamanland.fab.FloatingActionButton
        android:id="@+id/keyboard_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_keyboard_white_24dp" />

        <com.shamanland.fab.FloatingActionButton
            android:id="@+id/popup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:src="@drawable/selection_icon" />

</RelativeLayout>